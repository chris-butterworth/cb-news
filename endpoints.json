		"description": "modify the vote count on an existing article. Positive and negative integers are allowed",
		"expectedInput": { "inc_votes": 1 },
		"exampleResponse": {
			"title": "article title",
			"topic": "cats",
			"author": "user1",
			"body": "article text",
